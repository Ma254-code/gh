<!-- Modal für Vorteile -->
<div class="modal-bg" id="modal">
  <div class="modal">
    <button class="close" onclick="closeModal()">&times;</button>
    <h3 id="modal-title"></h3>
    <ul id="modal-benefits"></ul>
  </div>
</div>

<script>
  // Rang-Daten
  const ranks = [
    {
      name: 'Bronze',
      price: '3,99€',
      benefits: [
        'Prefix Bronze im Chat',
        'Zugang zu Bronze-Serverbereich',
        'Exklusive Bronze-Rang-Items'
      ]
    },
    {
      name: 'Silber',
      price: '5,99€',
      benefits: [
        'Prefix Silber im Chat',
        'Zugang zu Silber-Serverbereich',
        'Exklusive Silber-Rang-Items'
      ]
    },
    {
      name: 'Gold',
      price: '8,99€',
      benefits: [
        'Prefix Gold im Chat',
        'Zugang zu Gold-Serverbereich',
        'Exklusive Gold-Rang-Items'
      ]
    },
    {
      name: 'Diamant',
      price: '12,99€',
      benefits: [
        'Prefix Diamant im Chat',
        'Zugang zu Diamant-Serverbereich',
        'Exklusive Diamant-Rang-Items'
      ]
    },
    {
      name: 'Platin',
      price: '16,99€',
      benefits: [
        'Prefix Platin im Chat',
        'Zugang zu Platin-Serverbereich',
        'Exklusive Platin-Rang-Items'
      ]
    },
    {
      name: 'Premium',
      price: '21,99€',
      benefits: [
        'Prefix Premium im Chat',
        'Zugang zu Premium-Serverbereich',
        'Exklusive Premium-Rang-Items'
      ]
    },
    {
      name: 'VIP',
      price: '29,99€',
      benefits: [
        'Prefix VIP im Chat',
        'Zugang zu VIP-Serverbereich',
        'Exklusive VIP-Rang-Items'
      ]
    },
  ];

  const rankListEl = document.getElementById('rank-list');
  const modal = document.getElementById('modal');
  const modalTitle = document.getElementById('modal-title');
  const modalBenefits = document.getElementById('modal-benefits');

  // Ränge im Grid einfügen
  ranks.forEach((rank, index) => {
    const div = document.createElement('div');
    div.className = 'product';
    div.innerHTML = `
      <h3>${rank.name}</h3>
      <div class="price">${rank.price}</div>
      <button onclick="openModal(${index})">Vorteile ansehen</button>
    `;
    rankListEl.appendChild(div);
  });

  // Modal öffnen
  function openModal(index) {
    const rank = ranks[index];
    modalTitle.textContent = rank.name + ' Rang Vorteile';
    modalBenefits.innerHTML = '';
    rank.benefits.forEach(benefit => {
      const li = document.createElement('li');
      li.textContent = benefit;
      modalBenefits.appendChild(li);
    });
    modal.classList.add('active');
  }

  // Modal schließen
  function closeModal() {
    modal.classList.remove('active');
  }
</script>

